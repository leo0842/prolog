<?xml version="1.0" encoding="UTF-8"?>
<included>
  <property resource="application.yml" />
  <appender name="slack-logger" class="com.github.maricn.logback.SlackAppender">
    <webhookUri>${SLACK_LOGGER_WEBHOOK_URI}</webhookUri>
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%d{yyyy-MM-dd HH:mm:ss}:%-4relative [%thread] %-5level %C.%M:%L - %msg%n</pattern>
    </layout>
    <colorCoding>true</colorCoding>
  </appender>

  <appender name="async-slack-logger" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="slack-logger" />
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>WARN</level>
    </filter>
  </appender>
</included>

