
commands:
  01-promtail-linux-amd64-zip:
    command: wget https://github.com/grafana/loki/releases/download/v2.2.1/promtail-linux-amd64.zip
  02-promtail-linux-amd64-unzip:
    command: unzip promtail-linux-amd64.zip
  03-move-promtail:
    command: cp ./promtail-linux-amd64 /
  04-move-config:
    command: cp ./promtail-local-config.yaml /
  05-exec-promtail:
    command: nohup /promtail-linux-amd64 -config.file=/promtail-local-config.yaml &
